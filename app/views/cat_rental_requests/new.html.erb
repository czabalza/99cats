<h1>Make a request!</h1>
<form action="<%= cat_cat_rental_requests_url(params[:cat_id]) %>" method="post">
<select name="cat_rental_request[cat_id]" >
  <% @available_cats.each do |cat| %>
  <option <%= "selected" if cat.id == @request.cat_id %> value=<%=cat.id%>><%=cat.name%></option>
  <% end %>

</select>
Start Date: &nbsp
<input type="date" name="cat_rental_request[start_date]" value=<%= @request.start_date %>>
End Date: &nbsp
<input type="date" name="cat_rental_request[end_date]" value=<%= @request.end_date %>>
<input type="submit" value= 'Make Request' >
</form>
